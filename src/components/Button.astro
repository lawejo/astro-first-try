---
const { variant, size } = Astro.props;
---

<button class={variant + " " + size}> <slot /></button>
<style>
    button {
        padding: 1rem;
    }

    .primary {
        background-color: hotpink;
        color: black;
    }
    .secondary {
        background-color: black;
        color: hotpink;
    }

    .small {
        font-size: 1rem;
    }
    .medium {
        font-size: 2rem;
    }
    .large {
        font-size: 3rem;
    }
</style>
